<% include ../partials/header %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h1>Create a new campground</h1>
      <form action="/campgrounds" method="post">
        <div class="form-group">
          <input class="form-control" name="name" type="text" placeholder="name">
        </div>
        <div class="form-group">
          <input class="form-control" name="image" type="text" placeholder="image url">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="description" placeholder="Enter a description" rows="5"></textarea>
        </div>
        <div class="form-group">
          <input class="form-control" name="price" type="number" placeholder="price" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary float-right">Create</button>
        </div>
      </form>
      <a class="btn btn-lg btn-secondary float-left" href="/campgrounds">Go Back</a>
    </div>
  </div>
<% include ../partials/footer %>
