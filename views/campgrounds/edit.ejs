<% include ../partials/header %>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h1>Edit <%= campground.name %></h1>
      <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
        <div class="form-group">
          <input class="form-control" name="campground[name]" type="text" value="<%= campground.name %>">
        </div>
        <div class="form-group">
          <input class="form-control" name="campground[image]" type="text" value="<%= campground.image %>">
        </div>
        <div class="form-group">
          <input class="form-control" name="campground[price]" type="number" value="<%= campground.price %>" min="0.01" step="0.01">
        </div>
        <div class="form-group">
          <textarea class="form-control" name="campground[description]" value="<%= campground.description %>" rows="5"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary float-right">Save changes</button>
        </div>
      </form>
      <a class="btn btn-lg btn-secondary" href="/campgrounds">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>
