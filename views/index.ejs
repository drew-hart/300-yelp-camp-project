<% include partials/header %>

<!-- Jumbotron -->
<div class="container">
  <header class="jumbotron">
    <h1>Welcome to Yelp Camp!</h1>
    <p>Take a look at our hand picked campgrounds from all over the world.</p>
    <p><a class="btn btn-primary btn-lg" href="campgrounds/new">Add a new campground</a></p>
  </header>
  <!-- Grid of images -->
  <div class="row" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach( (campground) => { %>
      <div class="col-md-3 col-sm-6">
        <div class="thumbnail">
          <img src="<%= campground.image %>"/>
          <div class="caption">
            <h4><%= campground.name %></h4>
            <p>
              <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">More info</a>
            </p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>

</div>
<% include partials/footer %>
