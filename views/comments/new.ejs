<% include ../partials/header %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h1>Add New Comment to <%= campground.name %></h1>

      <form action="/campgrounds/<%= campground._id %>/comments" method="post">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" placeholder="Enter a comment" rows="5"></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary float-right">Submit!</button>
        </div>
      </form>
      <a class="btn btn-lg btn-secondary float-left" href="/campgrounds">Go Back</a>
    </div>
  </div>
<% include ../partials/footer %>
