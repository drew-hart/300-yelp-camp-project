<% include ../partials/header %>
<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-6">
      <h1>Edit Comment for <%= campground.name %></h1>

      <form action="/campgrounds/<%= campground.id %>/comments/<%= comment.id %>/?_method=PUT" method="POST">
        <div class="form-group">
          <textarea class="form-control" name="comment[text]" rows="5"><%= comment.text %></textarea>
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary float-right">Submit!</button>
        </div>
      </form>
      <a class="btn btn-lg btn-secondary float-left" href="/campgrounds">Go Back</a>
    </div>
  </div>
<% include ../partials/footer %>
